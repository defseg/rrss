<%= render 'sidebar' %>
<div class="main">
	<div class="feed-header">
		<h1><%= @feed.title %></h1>
		<%= button_to "Delete feed", feed_url, method: :delete %>
		<%= button_to "Reload feed", reload_feed_url(@feed), method: :put %>
		<div class="feed-buckets">
		<ul>
		<% @feed.buckets.each do |bucket| %>
			<li>
				<a href="<%= bucket_url(bucket) %>"> <%= bucket.name %> </a> 
			</li>
		<% end %>
		</ul>
	</div>
	</div>
	<ul>
		<% @entries.each do |entry| %>
			<%= render 'partials/entry', entry: entry, show_feed_titles: false %>
		<% end %>
	</ul>
</div>
